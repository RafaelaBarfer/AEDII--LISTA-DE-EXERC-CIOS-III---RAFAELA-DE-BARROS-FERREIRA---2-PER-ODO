#include <stdio.h>

int main (){
	
int i,j,temp,parar;
int array [8];

printf ("Insira 8 numeros para ordena-los em ordem crescente: ");

for (i=0;i<8;i++){
	printf ("Numero %d: ", i+ 1);
	scanf (" %d",&array[i]);
}	
	
for (i=0;i=8-1;i++){
	
	parar = 0;
	
	for (j=0;j<8-i-1;j++){
		if (array [j]> array[j+1]){
			temp = array [j];
			array[j]=array [j=1];
			array [j+i]= temp; 
			
			parar = 1;
		}
	}
	
	if (parar == 0){
		break;
	}
}	
	printf ("Array completo e ordenado: ");
	for (i=0;i<8;i++){
		printf ("%d",array [i]);
	}
	return 0;
}
